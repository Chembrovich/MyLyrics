<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    <ImageView
        android:id="@+id/country_flag_spinner_image_view"
        android:layout_width="@dimen/country_image_spinner_size"
        android:layout_height="@dimen/country_image_spinner_size"
        android:padding="@dimen/item_country_spinner_padding"
        android:src="@drawable/country_united_states" />
    <TextView
        android:id="@+id/country_name_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/item_country_spinner_padding"
        android:text="@string/default_country"
        android:textColor="@color/colorCountryText" />
</LinearLayout>